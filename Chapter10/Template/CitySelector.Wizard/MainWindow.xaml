<Window x:Class="CitySelector.Wizard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CitySelector.Wizard"
        mc:Ignorable="d"
        Title="VS Tips and Techniques - Project Template Wizard" Height="160" Width="500" ResizeMode="NoResize" Loaded="Window_Loaded">
    <DockPanel Height="Auto" Name="dockPanel1" Width="Auto" LastChildFill="True">
        <TextBlock DockPanel.Dock="Top" Height="23" Margin="10,10,0,0"
                   Text="Enter the connection string to your database (or any string just for testing):" />

        <TextBox DockPanel.Dock="Top" Height="23" Name="txtConnectionString" Margin="10,10,10,0" Width="Auto" />

        <Button Content="OK" Name="btnOK" Width="100" Height="40" Margin="10,10,0,0" VerticalAlignment="top" HorizontalAlignment="Left" Click="BtnOK_Click" IsDefault="True" />
    </DockPanel>
</Window>